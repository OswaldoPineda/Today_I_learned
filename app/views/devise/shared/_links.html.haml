.row
  .col.s12.valign-wrapper
    - if controller_name != 'sessions'
      = link_to "Log in", new_session_path(resource_name), class: 'link blue-text login-link'
      %br/
    - if devise_mapping.registerable? && controller_name != 'registrations'
      .col.s6.m6.l6
        %p.margin.medium-small
          = link_to "Sign up", new_registration_path(resource_name), class: 'link blue-text text-darken-2'
      %br/
    - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
      .col.s6.m6.l6
        %p.margin.right-align.medium-small
          = link_to "Forgot your password?", new_password_path(resource_name), class: 'link blue-text text-darken-2'
      %br/
    - if devise_mapping.confirmable? && controller_name != 'confirmations'
      = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'link blue-text'
      %br/
    - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
      = link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: 'link blue-text'
      %br/
    - if devise_mapping.omniauthable?
      - resource_class.omniauth_providers.each do |provider|
        = link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post
        %br/
