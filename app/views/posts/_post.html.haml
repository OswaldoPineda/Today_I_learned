.row.card-row
  .col.s12.m6
    .card.blue-grey.darken-1
      .card-content.white-text
        %span.card-title
          = post.title
        = markdown(post.content)
      .card-action
        .user-info.valign-wrapper
          %i.material-icons account_circle
          %span= post.user.email
        - unless post.labels.empty?
          .divider.divider-margin
          .labels
            %a.new.badge.red{ href: "#" }Ruby
            %a.new.badge.red{ href: "#" }Ruby on Rails
            %a.new.badge.red{ href: "#" }Javascript
