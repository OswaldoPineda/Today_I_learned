= form_for post do |f|
  .row.post-form{ data: { controller: "post" } }
    .col.s12.m6
      .row
        %h4 Title
        .input-field
          = f.text_field :title,
            class: 'post-title white-input',
            data: { post_target: 'title', action: 'input->post#preview' }
      .row
        %h5 Content
        .input-field
          = f.text_area :content,
            id: 'text-area',
            class: 'materialize-textarea white-input',
            'data-length': '10',
            data: { post_target: 'body', action: 'input->post#preview' }
        = render 'select-labels', { labels: labels, post: post }
      .actions.row
        = f.submit 'Save', class: "main-btn btn waves-effect waves-light w-100"
    .col.s12.m6
      = render 'preview', post: post
